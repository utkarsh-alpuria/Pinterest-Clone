<% include ./partials/header.ejs %>

<div class="w-full h-screen bg-gradient-to-b from-zinc-100 to-zinc-400 flex items-center justify-center">
    <div class="w-[23vw] bg-white px-6 py-4 rounded-[20px]">
        <img class="w-[70px] ml-20" src="images/pin_clone_logo.png" alt="LOGO">
        <h1 class="text-2xl tracking-tight capitalize text-center font-semibold text-zinc-700 mb-3">Welcome to Pinterest.</h1>
        <form action="/login", method="post">
            <label class="text-sm tracking-tight font-semibold text-zinc-500 mt-2">Username</label>
            <input class="text-sm block border-2 rounded-[10px] w-full px-3 py-2 mb-2" type="text" name="username" placeholder="Username">
            <label class="text-sm tracking-tight font-semibold text-zinc-500 mt-2">Password</label>
            <input class="text-sm block border-2 rounded-[10px] w-full px-3 py-2" type="password" name="password" placeholder="Password">
            <a class="text-sm font-semibold text-zinc-500" href="#">Forgotten password?</a>
            <input class="block w-full px-3 py-2 bg-red-600 text-white font-semibold rounded-full mt-3" type="submit" value="Login">
            <p class="text-xs font-semibold text-center mt-4 text-zinc-400">By, continuing, you agree to Pinterest's Terms of Service</p> 
            <a class="text-sm font-semibold text-center inline-block w-full text-center mt-3 text-zinc-500" href="/register">Do not have an account?</a>
        </form>
    </div>
</div>

<% include ./partials/footer.ejs %>


<% include ./partials/header.ejs %>
    <div class="w-full min-h-screen bg-zinc-800 px-6 py-8 text-white">
        <h1 class="text-xl font-semibold">Create a new post.</h1>
        <hr class="opacity-20 mt-4">
        <form action="/createpost" method="post" enctype="multipart/form-data">
            <input name="post_image" type="file" class="block w-1/3 mt-4">
            <input name="title" type="text" placeholder="Title" class="block w-1/3 mt-3 rounded-[10px] border-2 border-zinc-600 bg-zinc-800 text-white px-2 py-2">
            <textarea name="description" type="text" placeholder="Description" class="block w-1/3 mt-3 rounded-[10px] border-2 border-zinc-600 bg-zinc-800 text-white px-2 py-2 h-36" ></textarea>
            <input type="submit" class="block w-1/3 mt-3 rounded-full bg-red-700 px-2 py-2" >
        </form>
    </div>
<% include ./partials/footer.ejs %>
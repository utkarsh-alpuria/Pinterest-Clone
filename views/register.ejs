<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-gradient-to-b from-zinc-100 to-red-200 flex items-center justify-center">
    <div class="w-[23vw] bg-white px-6 py-4 rounded-[20px]">
        <h1 class="text-2xl tracking-tight capitalize text-center font-semibold text-zinc-700 mb-1">Create New Account.</h1>
        <form action="/register", method="post">
            <label class="text-sm tracking-tight font-semibold text-zinc-500 mt-1">Username</label>
            <input class="text-sm block border-2 rounded-[10px] w-full px-3 py-2" type="text" name="username" placeholder="Username">
            <label class="text-sm tracking-tight font-semibold text-zinc-500 mt-1">Full Name</label>
            <input class="text-sm block border-2 rounded-[10px] w-full px-3 py-2" type="text" name="fullname" placeholder="Fullname">
            <label class="text-sm tracking-tight font-semibold text-zinc-500 mt-1">Email</label>
            <input class="text-sm block border-2 rounded-[10px] w-full px-3 py-2" type="email" name="email" placeholder="Email">
            <label class="text-sm tracking-tight font-semibold text-zinc-500 mt-1">Password</label>
            <input class="text-sm block border-2 rounded-[10px] w-full px-3 py-2" type="password" name="password" placeholder="Password">
            <label class="text-sm tracking-tight font-semibold text-zinc-500 mt-1">Contact</label>
            <input class="text-sm block border-2 rounded-[10px] w-full px-3 py-2" type="number" name="contact" placeholder="Contact">
            <input class="block w-full px-3 py-2 bg-red-600 text-white font-semibold rounded-full mt-3" type="submit" value="Create Account">
            <a class="text-sm font-semibold text-center inline-block w-full text-center mt-3 text-zinc-500" href="/">Login existing account</a>
        </form>
    </div>
</div>
<% include ./partials/footer.ejs %>
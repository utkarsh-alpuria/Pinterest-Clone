<% include ./partials/header.ejs %>
    <div class="w-full min-h-screen bg-zinc-800 px-6 py-8 text-white">
        <h1 class="text-xl font-semibold">Your posts.</h1>
        <hr class="opacity-20 mt-4 mb-4">
        <div class="cards flex flex-wrap gap-10">
            <% user.posts.forEach(function(elem){ %>
                <div class="card">
                    <div class="card_image w-40 h-28 bg-zinc-200 rounded-lg overflow-hidden">
                        <img src="/images/uploads/<%= elem.image %>" alt="">
                    </div>
                    <h3 class="text-sm font-semibold mt-2"><%= elem.title %></h3>
                </div>
                <% }) %>
            
        </div>
    </div>

<% include ./partials/footer.ejs %>